{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"inlineSources": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"preserveWatchOutput": true,
		"sourceMap": true
	},
	"include": ["./*config*", "./src"],
	"exclude": ["./node_modules/**"]
}
