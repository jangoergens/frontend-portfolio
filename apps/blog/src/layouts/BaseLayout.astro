---
const { title } = Astro.props as { title: string };
import { Image } from 'astro:assets';

import githubLogo from '../assets/github.svg';
---

<html class="h-full" lang="en">
	<head>
		<meta charset="utf-8" />
		<meta content="width=device-width" name="viewport" />
		<link href="/favicon.svg" rel="icon" type="image/svg+xml" />
		<link
			as="font"
			crossorigin
			href="/fonts/Inter-VariableFont_slnt,wght.ttf"
			rel="preload"
			type="font/ttf"
		/>
		<title>{title}</title>
	</head>

	<body class="flex h-full flex-col" data-theme="skeleton">
		<header class="alig flex justify-center">
			<nav>
				<ul class="flex justify-center gap-4">
					<li>
						<a class="btn" href="/">Home</a>
					</li>
					<li>
						<a class="btn" href="/about">About</a>
					</li>
				</ul>
			</nav>
		</header>
		<main class="mx-auto w-full md:w-[768px]">
			<slot />
		</main>
		<footer class="mt-auto flex justify-center gap-2 py-4">
			<span>Copyright © {new Date().getFullYear()}</span>
			<a
				class="flex gap-1 font-bold"
				href="https://www.github.com/jangoergens"
				rel="noopener noreferrer"
				target="_blank"
			>
				Jan Görgens
				<Image alt="Github Logo" src={githubLogo} />
			</a>
		</footer>
	</body>
</html>

<style>
	@font-face {
		font-family: 'Inter';
		src: url('/fonts/Inter-VariableFont_slnt,wght.ttf') format('truetype');
		font-weight: 100 900;
		font-style: normal;
		font-display: swap;
	}
	:root [data-theme='skeleton'] {
		--theme-font-family-base: 'Inter', sans-serif;
		--theme-font-family-heading: 'Inter', sans-serif;
	}
	@media screen and (min-width: 960px) {
		html {
			margin-left: calc(100vw - 100%);
			margin-right: 0;
		}
	}
</style>
