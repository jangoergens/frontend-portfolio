{
  "name": "youtube-top-comments",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "all": "pnpm install && pnpm lint && pnpm check && pnpm build && pnpm test",
    "build": "turbo run build",
    "check": "turbo run check",
    "clean": "turbo daemon clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "start": "turbo run start --parallel",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "3.0.0",
    "turbo": "1.10.12"
  },
  "engines": {
    "node": ">=18 < 19"
  },
  "packageManager": "pnpm@8.6.11"
}
